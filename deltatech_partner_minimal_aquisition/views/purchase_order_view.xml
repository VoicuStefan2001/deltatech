<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <field name="partner_minimal_purchase_value" invisible="1" />
                <field name="amount_total" invisible="1" />
                <div
                    class="alert alert-warning"
                    role="alert"
                    invisible="amount_total >= partner_minimal_purchase_value"
                >
                    <strong
                    >Warning:</strong> The total value of this purchase order is below the minimal acquisition value of the partner.
                </div>
            </xpath>

        </field>
    </record>
</odoo>
